{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@craft-studio/typescript-config/node",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "allowJs": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".vite"]
}
