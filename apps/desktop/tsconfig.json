{
  "extends": "@craft-studio/typescript-config/node",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "allowJs": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@craft-studio/ui": ["../../packages/ui/src"],
      "@craft-studio/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".vite"]
}
