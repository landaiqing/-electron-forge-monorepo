{
  "name": "@craft-studio/logger",
  "version": "1.0.0",
  "type": "module",
  "description": "Logger service for Electron applications",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./main": "./src/main/index.ts",
    "./renderer": "./src/renderer/index.ts"
  },
  "scripts": {
    "build": "pnpm exec tsc --build",
    "clean": "rimraf dist node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "pnpm exec tsc --noEmit"
  },
  "dependencies": {
    "@craft-studio/shared": "workspace:*",
    "@craft-studio/electron-events": "workspace:*",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@craft-studio/eslint-config": "workspace:*",
    "@craft-studio/prettier-config": "workspace:*",
    "@craft-studio/typescript-config": "workspace:*"
  },
  "peerDependencies": {
    "electron": ">=28.0.0"
  }
}
