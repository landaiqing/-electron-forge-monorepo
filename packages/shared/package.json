{
  "name": "@craft-studio/shared",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared types and constants",
  "main": "./types/index.ts",
  "types": "./types/index.ts",
  "exports": {
    "./types": "./types/index.ts",
    "./config": "./config/index.ts",
    "./events": "./events/index.ts"
  },
  "scripts": {
    "build": "pnpm exec tsc --build",
    "clean": "rimraf dist node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "type-check": "pnpm exec tsc --noEmit"
  },
  "devDependencies": {
    "@craft-studio/eslint-config": "workspace:*",
    "@craft-studio/prettier-config": "workspace:*",
    "@craft-studio/typescript-config": "workspace:*",
    "@craft-studio/electron-events": "workspace:*"
  }
}
