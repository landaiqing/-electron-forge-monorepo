{
  "name": "@craft-studio/utils",
  "version": "1.0.0",
  "type": "module",
  "description": "Utility functions library",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "build": "pnpm exec tsc --build",
    "clean": "rimraf dist node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json,md}\"",
    "type-check": "pnpm exec tsc --noEmit"
  },
  "devDependencies": {
    "@craft-studio/eslint-config": "workspace:*",
    "@craft-studio/prettier-config": "workspace:*",
    "@craft-studio/typescript-config": "workspace:*",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
